div.lay-span-16.lay-page-bg.lay-corner-all.lay-not-last
  div.lay-margin-top-1
    div.lay-span-15.lay-margin-left-2
      form(method='post', action='/blog/edit/#{article.id}')
        p
          label title
          br
          input#blog_title.span-12.lay-corner-all(type='text', name='blog_title', value="#{article.title}")
          br
        p
          label content
          br
          textarea#blog(type='textarea', name='blog_body')= article.body
          input#blog_id(type='hidden', value="#{article.id}")
        p
          button#login_button.ui-button.ui-widget.ui-state-default.ui-corner-all.ui-button-text-only(role='button')
            span.ui-button-text save it!

